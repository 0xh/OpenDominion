{
  "type": "project",
  "require": {
    "php": ">=5.6.4",
    "laravel/framework": "5.4.*",
    "prettus/l5-repository": "^2.6",
    "atrox/haikunator": "^1.2",
    "guzzlehttp/guzzle": "^6.2",
    "ipunkt/laravel-analytics": "dev-master",
    "thomaswelton/laravel-gravatar": "dev-master"
  },
  "require-dev": {
    "fzaninotto/faker": "~1.4",
    "mockery/mockery": "0.9.*",
    "phpunit/phpunit": "~5.0",
    "symfony/css-selector": "3.1.*",
    "symfony/dom-crawler": "3.1.*",
    "barryvdh/laravel-debugbar": "^2.2",
    "barryvdh/laravel-ide-helper": "^2.2",
    "doctrine/dbal": "^2.2",
    "satooshi/php-coveralls": "dev-master",
    "laravel/browser-kit-testing": "^1.0"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/WaveHack/laravel-gravatar"
    },
    {
      "type": "vcs",
      "url": "https://github.com/WaveHack/laravel-analytics"
    }
  ],
  "autoload": {
    "classmap": [
      "app/database"
    ],
    "psr-4": {
      "OpenDominion\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "OpenDominion\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "Illuminate\\Foundation\\ComposerScripts::postInstall",
      "php bin/artisan optimize"
    ],
    "post-update-cmd": [
      "Illuminate\\Foundation\\ComposerScripts::postUpdate",
      "php bin/artisan ide-helper:generate",
      "php bin/artisan ide-helper:models -N --dir=\"src/Models\"",
      "php bin/artisan ide-helper:meta",
      "php bin/artisan optimize"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true
  }
}
